		<OnUpdate>
			PBHUD_OnUpdate(self);
		</OnUpdate>
	</Scripts>
</Frame>

<Frame name="PBHUD" hidden="false" toplevel="true" enableMouse="true" sizeabe="true" movable="true" parent="UIParent" >
	<Size>
		<AbsDimension x="200" y="140"/>
	</Size>
	
	<Anchors>
		<Anchor point="TOPLEFT">
			<Offset>
				<AbsDimension x="200" y="-200"/>
			</Offset>
		</Anchor>
	</Anchors>
	

	<Layers>
		<Layer level="BACKGROUND">
			<Texture name="$parentBackgroundTexture" file="Interface\LFGFRAME\UI-LFG-BACKGROUND-HEROIC" alpha="0.2">			
				<Size>
					<AbsDimension x="320" y="140"/>
				</Size>
				
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Texture>	
		</Layer>

	</Layers>

	

	<Frames>
	


	
	<Button name="$parentOptions">	
		<Size>
			<AbsDimension x="24" y="24"/>
		</Size>
		
		<Anchors>
				<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" />
		</Anchors>
		
		<Layers>
			<Layer level="ARTWORK">			
				<Texture name="$parentIcon" file="Interface\WorldMap\Gear_64Grey">
					<Size>
						<AbsDimension x="24" y="24"/>
					</Size>
					
					<Anchors>
						<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
							<Offset>
								<AbsDimension x="0" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		
		<!-- INTERFACE/WorldMap/Gear_64 		<TexCoords left="0.0" right="0.5" top="0.5" bottom="1.0"/> 		-->
		
		<Scripts>
			<OnLoad>
				PBHUDOptionsIcon.tooltipText = "Pet Battle HUD "..GetAddOnMetadata("petbattlehud", "Version").."|r|nBy Smashed (Bladefist)|r|nLeft Click to set options";
				PBHUDOptions:Hide();
			</OnLoad>
			
			<OnClick>
				PBHUDOptions_Toggle();
			</OnClick>
		
			<OnEnter>
				PBHUDOptions:Show();
				PBHUDOptionsIcon:SetVertexColor(1,1,0);
				GameTooltip:SetOwner(PBHUDOptions, "ANCHOR_LEFT");
				GameTooltip:SetText(PBHUDOptionsIcon.tooltipText);
			</OnEnter>
			
			<OnLeave>
				PBHUDOptionsIcon:SetVertexColor(1,1,1);
				GameTooltip:Hide();
				PBHUDOptions:Hide();
			</OnLeave>			
		</Scripts>
	</Button>
	
	

		<!-- PBHUDPet1  **************************************************************************************** -->
	
		<Button name="$parentPet1" inherits="PBH_Template">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="8" y="-8"/>
					</Offset>
				</Anchor>
			</Anchors>
		</Button>

		<!-- PBHUDPet2  **************************************************************************************** -->
		
		<Button name="$parentPet2" inherits="PBH_Template">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parentPet1" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="0" y="-46"/>
					</Offset>
				</Anchor>
			</Anchors>
		</Button>

		<!-- PBHUDPet3  **************************************************************************************** -->

		<Button name="$parentPet3" inherits="PBH_Template">
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parentPet2" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="0" y="-46"/>
					</Offset>
				</Anchor>
			</Anchors>
		</Button>

	</Frames>


	<!-- PBHUD Scripts  **************************************************************************************** -->

	<Scripts>
		
		
		<OnLoad>
			PBHUD_OnLoad(self);
		</OnLoad>
		
		<OnMouseDown>
			self:StartMoving();
		</OnMouseDown>
		
		<OnMouseUp>
			self:StopMovingOrSizing();
		</OnMouseUp>
		
		<OnEvent>
			PBHUD_OnEvent(self, event, ...);
		</OnEvent>
		
		<OnEnter>
			PBHUDOptions:Show();
		
		</OnEnter>
		
		<OnLeave>

			PBHUDOptions:Hide();
		
		</OnLeave>		
		
	</Scripts>

	<!-- PBHUD - END  **************************************************************************************** -->

</Frame>



<GameTooltip name="PBHUDTooltip" inherits="GameTooltipTemplate">
   <Scripts>
	 <Onload>
	   PBHUDTooltip:SetOwner(PBHUD, "ANCHOR_NONE");
	 </Onload>
   </Scripts>
